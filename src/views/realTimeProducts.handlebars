    <label for="id">Coloque el ID del producto a eliminar</label>
    <input name="id" id="id">
    <br>
    <br>
    <input type="submit" id="deleteProduct" value="Eliminar producto">
  </form>

  <div>
    <h2>Todos nuestros productos</h2>
